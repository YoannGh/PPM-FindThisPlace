<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.upmc.m2sar.findthisplace.activities.MainActivity">

    <TextView
        android:id="@+id/playername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/default_textview_playername"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnChangePlayer"
        app:layout_constraintEnd_toStartOf="@+id/btnPlayLvl0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/default_textview_playername" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnChangePlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="80dp"
        android:text="@string/btn_change_profile"
        app:layout_constraintBottom_toTopOf="@+id/btnScores"
        app:layout_constraintEnd_toStartOf="@+id/btnPlayLvl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playername"
        app:layout_constraintVertical_bias="0.016"
        fbutton:buttonColor="@color/fbutton_color_silver"
        tools:text="@string/btn_change_profile" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnPlayLvl0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="60dp"
        android:text="@string/lvl_0_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playername"
        app:layout_constraintTop_toTopOf="parent"
        fbutton:buttonColor="@color/fbutton_color_emerald"
        fbutton:shadowEnabled="true"
        tools:text="@string/lvl_0_name" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnPlayLvl1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:text="@string/lvl_1_name"
        app:layout_constraintBottom_toTopOf="@+id/btnPlayLvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnChangePlayer"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayLvl0"
        fbutton:buttonColor="@color/fbutton_color_orange"
        fbutton:shadowEnabled="true"
        tools:text="@string/lvl_1_name" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnPlayLvl2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="98dp"
        android:text="@string/lvl_2_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnScores"
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:shadowEnabled="true"
        tools:text="@string/lvl_2_name" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnScores"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="80dp"
        android:text="@string/scores_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPlayLvl2"
        app:layout_constraintStart_toStartOf="parent"
        fbutton:buttonColor="@color/fbutton_default_color"
        fbutton:shadowEnabled="true"
        tools:text="@string/scores_btn" />

</android.support.constraint.ConstraintLayout>
